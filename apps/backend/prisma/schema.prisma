generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  xp            Int      @default(0)
  level         Int      @default(1)
  coins         Int      @default(0)
  created_at    DateTime @default(now())
}
